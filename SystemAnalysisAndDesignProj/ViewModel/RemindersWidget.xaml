<UserControl x:Class="RemindersWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SystemAnalysisAndDesignProj"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="370" Height="330">
    <Grid Background="White" Height="auto" Width="auto">
        <ScrollViewer  CanContentScroll="True">
            <StackPanel Width="auto" Height="auto">
                <WrapPanel Margin="15,15,15,0" Height="auto" Orientation="Vertical">
                    <TextBlock Text="Reminders" FontSize="22" Foreground="#FF554F4F" />
                </WrapPanel>
                <WrapPanel x:Name="ReminderContent" Margin="15,12,15,0" Orientation="Vertical" >
                    
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
