<UserControl x:Class="RemindersWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SystemAnalysisAndDesignProj"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White" >
        <StackPanel>
            <StackPanel Margin="15,15,15,0" Height="auto">
                <TextBlock Text="Reminders" FontSize="16" Foreground="#FF554F4F" />
            </StackPanel>
            <StackPanel Margin="15,12,15,15" MaxHeight="230" MaxWidth="270">
                <local:ReminderItem />
                <local:ReminderItem />
                <local:ReminderItem />
                <local:ReminderItem />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
